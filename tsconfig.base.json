{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@typescript-exercise/backend/core/*": [
        "libs/backend/core/src/lib/*"
      ],
      "@typescript-exercise/backend/data-access/*": [
        "libs/backend/data-access/src/lib/*"
      ],
      "@typescript-exercise/backend/features/auth": [
        "libs/backend/features/auth/src/index.ts"
      ],
      "@typescript-exercise/backend/features/chat": [
        "libs/backend/features/chat/src/index.ts"
      ],
      "@typescript-exercise/frontend/core/*": [
        "libs/frontend/core/src/lib/*"
      ],
      "@typescript-exercise/frontend/data-access/*": [
        "libs/frontend/data-access/src/lib/*"
      ],
      "@typescript-exercise/frontend/features/auth": [
        "libs/frontend/features/auth/src/index.ts"
      ],
      "@typescript-exercise/frontend/features/chat": [
        "libs/frontend/features/chat/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
